
<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<main>
    <section class="content-info">
        <h1>Agenda</h1>
        <p>Esses s√£o os seus contatos</p>
        <%- include('includes/messages') %>
        <div class="content-table">
            <% if(contatos.length > 0) { %> 
            <table>
                <% contatos.forEach(contato => { %> 
                    <tr>
                        <td><%= contato.nome %> </td>
                        <td><%= contato.sobrenome %> </td>
                        <td><%= contato.email %> </td>
                        <td><%= contato.telefone %> </td>
                        <td><a href="/contato/index/<%= contato._id %>">Editar</a></td>
                        <td><a href="/contato/delete/<%= contato._id %>" style="color:red;">Excluir</a></td>
                    </tr>
                <% }) %> 
            </table>
            <% } else { %>
                <p style="width: 100%; text-align: center;">Lista de contatos vazia.</p>
            <% } %>  
        </div>
    </section>
</main>
<%- include('includes/footer.ejs') %>
